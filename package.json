{
  "name": "scenably",
  "productName": "Scenably",
  "version": "0.1.0",
  "description": "E2E Testing Scenario Builder - Playwright 자동화 도구",
  "author": "Scenably Team",
  "private": true,
  "main": "dist-electron/main.js",
  "scripts": {
    "lint": "eslint",
    "test:e2e": "playwright test",
    "build:renderer": "vite build",
    "dev:renderer": "vite",
    "electron:dev": "npm run build:electron && npm run build:renderer && electron dist-electron/main.js",
    "electron:pack": "npm run build:electron && npm run build:renderer && electron-builder",
    "build:electron": "tsc --project electron/tsconfig.json",
    "dist": "npm run build:electron && npm run build:renderer && electron-builder --publish=never",
    "dist:win": "npm run build:electron && npm run build:renderer && electron-builder --win --publish=never",
    "dist:mac": "npm run build:electron && npm run build:renderer && electron-builder --mac --publish=never",
    "dist:linux": "npm run build:electron && npm run build:renderer && electron-builder --linux --publish=never"
  },
  "dependencies": {
    "@playwright/test": "^1.55.0",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "better-sqlite3": "^12.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "get-port": "^7.1.0",
    "lucide-react": "^0.563.0",
    "playwright": "1.55.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.71.1",
    "react-router-dom": "^7.13.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/better-sqlite3": "^7.6.13",
    "@types/electron-devtools-installer": "^4.0.0",
    "@types/node": "^20.19.30",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.24",
    "electron": "^40.1.0",
    "electron-builder": "^26.4.0",
    "electron-devtools-installer": "^4.0.0",
    "electron-rebuild": "^3.2.9",
    "esbuild": "^0.27.2",
    "eslint": "^9",
    "postcss": "^8.5.6",
    "typescript": "^5",
    "vite": "^4.5.14"
  },
  "build": {
    "appId": "com.scenably.app",
    "productName": "Scenably",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron/**/*",
      "assets/**/*",
      "!node_modules/.cache/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
